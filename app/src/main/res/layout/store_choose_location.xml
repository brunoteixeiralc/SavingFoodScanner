<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.savingfoodscanner.activity.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:text="Em qual supermercado se encontra ?"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        fontPath="fonts/Nexa-Bold.ttf"
        tools:ignore="MissingPrefix"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="14dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Rede"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/test_nice_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hideArrow="false" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Supermercado"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/test_nice_spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hideArrow="false" />

    </LinearLayout>

    <Button
        android:layout_margin="8dp"
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_bg"
        android:text="Salvar o desconto"
        android:textColor="@color/colorAccent" />

</LinearLayout>
