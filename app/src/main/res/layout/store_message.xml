<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.savingfoodscanner.activity.MainActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/marker"
        android:id="@+id/imageView2"
        android:layout_marginTop="35dp"
        android:padding="10dp"/>

    <TextView
        android:text="Você está no supermercado da rede Roldão no endereço Av. Cavalheiro Nami Jafet, 343 - Vl. Industrial, Mogi das Cruzes - SP, correto?"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_margin="14dp" />

    <Button
        android:layout_margin="8dp"
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_bg"
        android:text="Correto"
        android:textColor="@color/colorAccent" />

    <Button
        android:layout_margin="8dp"
        android:id="@+id/btn_change_location"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_bg"
        android:text="Mudar localidade"
        android:textColor="@color/colorAccent" />

</LinearLayout>
